// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String @id @default(cuid())
  email     String @unique
  password  String
  firstName String
  lastName  String

  roles Role[]
}

model Right {
  id          Int    @id @default(autoincrement())
  name        String @unique
  description String

  roles Role[]
}

model Role {
  id          Int    @id @default(autoincrement())
  name        String @unique
  description String

  rights Right[]
  users  User[]
}
